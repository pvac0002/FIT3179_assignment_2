{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Australian airports",
    "projection": {"type": "equirectangular", "scale": 1000, "center": [135, -28]},
    "layer": [
        {
            "data": {
                "url": "australia.json",
                "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
            },
            "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "white"}
        },
        {
        "data": {
                "url": "australia.json",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "black"}
        },
        {
        "data": {
                "url": "au-airports.csv"
            },
            "transform": [
                {"filter":"datum.type == 'large airport'"}
            ],
            "mark": {"type": "circle", "color": "red", "size": 500, "opacity": 1},
            "encoding": {
                "longitude": {"field": "longitude_deg", "type": "quantitative"},
                "latitude": {"field": "latitude_deg", "type": "quantitative"},
                "tooltip": [
                    {"field": "name", "type": "nominal", "title": "Airport Name"},
                    {"field": "iata_code", "type": "nominal", "title": "IATA Code"},
                    {"field": "type", "type": "nominal", "title": "type"}]
            }
        },
        {
        "data": {
                "url": "au-airports.csv"
            },
            "transform": [
                {"filter":"datum.type == 'medium airport'"}
            ],
            "mark": {"type": "circle", "color": "green", "size": 50, "opacity": 1},
            "encoding": {
                "longitude": {"field": "longitude_deg", "type": "quantitative"},
                "latitude": {"field": "latitude_deg", "type": "quantitative"},
                "tooltip": [
                    {"field": "name", "type": "nominal", "title": "Airport Name"},
                    {"field": "iata_code", "type": "nominal", "title": "IATA Code"},
                    {"field": "type", "type": "nominal", "title": "type"}]
            }
        },
        {
        "data": {
                "url": "au-airports.csv"
            },
            "transform": [
                {"filter":"datum.type == 'small airport'"}
            ],
            "mark": {"type": "circle", "color": "blue", "size": 5, "opacity": 1},
            "encoding": {
                "longitude": {"field": "longitude_deg", "type": "quantitative"},
                "latitude": {"field": "latitude_deg", "type": "quantitative"},
                "tooltip": [
                    {"field": "name", "type": "nominal", "title": "Airport Name"},
                    {"field": "iata_code", "type": "nominal", "title": "IATA Code"},
                    {"field": "type", "type": "nominal", "title": "type"}]
            }
        }
    ]

}