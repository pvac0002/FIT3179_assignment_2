{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Australian airports",
    "projection": {"type": "equirectangular", "scale": 1000, "center": [135, -28]},
    "layer": [
        {
            "data": {
                "url": "australia.json",
                "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
            },
            "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "white"}
        },
        {
        "data": {
                "url": "australia.json",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "white"}
        },
        {
        "data": {
                "url": "au-airports.csv"
            },
            "transform": [{"filter": }],
            "mark": {"type": "circle", "color": "red", "size": 50},
            "encoding": {
                "longitude": {"field": "longitude_deg", "type": "quantitative"},
                "latitude": {"field": "latitude_de", "type": "quantitative"},
                "tooltip": [
                    {"field": "name", "type": "nominal", "title": "Airport Name"},
                    {"field": "iata_code", "type": "nominal", "title": "IATA Code"}]
            }
        }]

}